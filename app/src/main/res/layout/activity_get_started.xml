<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted">

    <View
        android:background="@drawable/appbg_getstarted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="@drawable/bg_overlay_getstarted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/emblem"
        android:src="@drawable/emblemwhite"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover \nThe Beauty \nOf Earth"
        android:textColor="#FFF"
        android:textSize="38sp"
        android:fontFamily="@font/mregular"
        android:layout_below="@+id/emblem"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btn_sign_in"
        style="@style/btn_blue_primary"
        android:text="@string/sign_in"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/desc"
        android:layout_marginTop="130dp"/>

    <Button
        android:id="@+id/btn_new_account_create"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="NEW ACCOUNT"
        android:textSize="20sp"
        android:textColor="#B9B9B9"
        android:background="@drawable/bg_button_white_primary"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_sign_in"
        android:layout_marginTop="15dp"/>

</RelativeLayout>