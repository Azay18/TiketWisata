<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    tools:context=".RegisterOne">

    <ImageView
        android:id="@+id/icon_success_ticket"
        android:src="@drawable/icon_success_ticket"
        android:layout_width="266dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@android:dimen/app_icon_size"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blackPrimary"
        android:text="Selamat Menikmati"
        android:fontFamily="@font/mregular"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/icon_success_ticket"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/mlight"
        android:lineSpacingExtra="5dp"
        android:text="Anda berhasil membeli tiket \ndan selamat berlibur"
        android:textAlignment="center"
        android:textColor="@color/grayPrimary"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_view_ticket"
        style="@style/btn_blue_primary"
        android:layout_below="@+id/app_subtitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="VIEW TICKETS"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_dashboard"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_view_ticket"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_white_primary"
        android:text="MY DAHSBOARD"
        android:textColor="#B9B9B9"
        android:textSize="20sp" />

</RelativeLayout>