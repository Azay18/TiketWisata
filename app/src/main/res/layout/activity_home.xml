<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    android:scrollbars="none"
    tools:context=".RegisterOne">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/bg_gradient_primary_blue" />

        <TextView
            android:id="@+id/cna_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="My Dashboard"
            android:fontFamily="@font/mregular"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:textSize="20sp"/>

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_view_circle_picture"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/cna_label"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/photo_home_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_nopic"
            android:layout_marginTop="25dp"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_below="@+id/cna_label"/>

        <TextView
            android:id="@+id/nama_lengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cna_label"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/mmedium"
            android:textSize="18sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_lengkap"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/mlight"
            android:textSize="14sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/user_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cna_label"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/mmedium"
            android:textSize="22sp"
            android:textColor="@color/greenPrimary"/>

        <LinearLayout
            android:id="@+id/linear_sign"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/bg_layout_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/bio"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Menu"
                    android:textSize="18sp"
                    android:textColor="@color/blackPrimary"
                    android:fontFamily="@font/mregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:text="Explore the beauty of world"
                    android:textSize="14sp"
                    android:textColor="@color/grayPrimary"
                    android:fontFamily="@font/mlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/btn_ticket_pisa"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_pisa"/>

                        <TextView
                            android:text="Pisa"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ticket_torri"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_torri"/>

                        <TextView
                            android:text="Torri"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ticket_pagoda"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_pagoda"/>

                        <TextView
                            android:text="Pagoda"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/btn_ticket_borobudur"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_borobudur"/>

                        <TextView
                            android:text="Borobudur"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ticket_sphinx"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_sphinx"/>

                        <TextView
                            android:text="Sphinx"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ticket_monas"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_monas"/>

                        <TextView
                            android:text="Monas"
                            android:textSize="14sp"
                            android:textColor="@color/blackPrimary"
                            android:fontFamily="@font/mregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/menu"
            android:text="Ticket Tips"
            android:textSize="18sp"
            android:textColor="@color/blackPrimary"
            android:fontFamily="@font/mregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/linear_sign"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/desc_four"
            android:text="Learn it for many benefits"
            android:textSize="14sp"
            android:textColor="@color/grayPrimary"
            android:fontFamily="@font/mlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/desc_four"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/item_one"
                    android:layout_width="227dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:src="@drawable/item_two"
                    android:layout_width="227dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:src="@drawable/item_one"
                    android:layout_width="227dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>