<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary_blue"
    tools:context=".SignIn">

    <ImageView
        android:id="@+id/white_logo"
        android:src="@drawable/applogowhite"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@android:dimen/app_icon_size"/>

    <LinearLayout
        android:id="@+id/linear_sign"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:background="@drawable/bg_layout_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/white_logo"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/username_label"
                android:textSize="16sp"
                android:textColor="@color/grayPrimary"
                android:fontFamily="@font/mlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:lines="1"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:text="@string/password_label"
                android:textSize="16sp"
                android:textColor="@color/grayPrimary"
                android:fontFamily="@font/mlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:lines="1"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_in"
            style="@style/btn_blue_primary"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/sign_in"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Create New Account"
        android:fontFamily="@font/mlight"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:layout_below="@+id/linear_sign"/>

</RelativeLayout>